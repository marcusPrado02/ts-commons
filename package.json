{
  "name": "@acme/ts-commons",
  "version": "0.1.0",
  "private": true,
  "description": "Shared TypeScript library for microservices with Clean Architecture, DDD, and Hexagonal principles",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "test:coverage": "pnpm -r run test -- --coverage",
    "test:watch": "pnpm -r run test:watch",
    "test:ui": "vitest --ui",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,json,md}\"",
    "clean": "pnpm -r run clean && rm -rf node_modules",
    "typecheck": "pnpm -r run typecheck",
    "analyze:deps": "npx depcheck",
    "analyze:circular": "npx madge --circular --extensions ts ./packages",
    "analyze:complexity": "npx ts-complex --threshold 10 ./packages/**/*.ts",
    "analyze:all": "npm run analyze:deps && npm run analyze:circular && npm run typecheck",
    "quality:check": "npm run lint && npm run typecheck && npm run analyze:all",
    "dev": "pnpm -r run dev",
    "dev:watch": "pnpm -r run build --watch",
    "prerelease": "npm run quality:check && npm run test:coverage",
    "release": "semantic-release",
    "release:dry": "semantic-release --dry-run",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "pnpm build && changeset publish",
    "changelog:generate": "conventional-changelog -p conventionalcommits -i CHANGELOG.md -s -r 0",
    "changelog:preview": "conventional-changelog -p conventionalcommits",
    "update:deps": "npx npm-check-updates -u && pnpm install",
    "workspace:info": "pnpm list --depth=0",
    "workspace:graph": "npx madge --image dependency-graph.png ./packages",
    "prepare": "husky",
    "commit": "czg"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^19.2.0",
    "@commitlint/config-conventional": "^19.1.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.0.3",
    "@semantic-release/npm": "^12.0.1",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "conventional-changelog-cli": "^4.1.0",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "czg": "^1.9.4",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.4",
    "semantic-release": "^24.0.0",
    "tsx": "^4.7.0",
    "typedoc": "^0.28.17",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
