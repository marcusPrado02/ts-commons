{
  "name": "@acme/acl",
  "version": "0.1.0",
  "description": "Anti-corruption layer: translation layer, legacy system facades, protocol translation and data format conversion for @acme/ts-commons",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc -b",
    "clean": "rm -rf dist *.tsbuildinfo",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "lint": "eslint src --ext .ts --max-warnings 0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "vitest": "^2.1.9"
  },
  "keywords": [
    "acl",
    "anti-corruption-layer",
    "translation",
    "adapter",
    "facade",
    "ddd",
    "hexagonal-architecture"
  ]
}
