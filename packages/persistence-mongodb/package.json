{
  "name": "@acme/persistence-mongodb",
  "version": "0.1.0",
  "description": "MongoDB native driver adapter for Clean Architecture repositories",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc -b",
    "clean": "rm -rf dist *.tsbuildinfo",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {
    "@acme/kernel": "workspace:*",
    "@acme/persistence": "workspace:*"
  },
  "peerDependencies": {
    "mongodb": ">=6.0.0"
  },
  "peerDependenciesMeta": {
    "mongodb": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "vitest": "^2.1.9"
  },
  "keywords": ["mongodb", "persistence", "repository", "document-store", "clean-architecture"],
  "author": "",
  "license": "MIT"
}
