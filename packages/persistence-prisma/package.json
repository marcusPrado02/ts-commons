{
  "name": "@acme/persistence-prisma",
  "version": "0.1.0",
  "description": "Prisma ORM adapter for Clean Architecture repositories",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc -b",
    "clean": "rm -rf dist *.tsbuildinfo",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {
    "@acme/kernel": "workspace:*",
    "@acme/persistence": "workspace:*"
  },
  "peerDependencies": {
    "@prisma/client": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "@prisma/client": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "vitest": "^2.1.9"
  },
  "keywords": [
    "prisma",
    "persistence",
    "repository",
    "orm",
    "clean-architecture"
  ],
  "author": "",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/marcusPrado02/ts-commons.git"
  },
  "bugs": "https://github.com/marcusPrado02/ts-commons/issues",
  "homepage": "https://github.com/marcusPrado02/ts-commons/tree/main/packages/persistence-prisma#readme",
  "files": [
    "dist",
    "src",
    "README.md"
  ]
}
