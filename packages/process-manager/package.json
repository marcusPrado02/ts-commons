{
  "name": "@acme/process-manager",
  "version": "0.1.0",
  "description": "Process Manager pattern: state machine, timeout scheduling, process correlation and monitoring for @acme/ts-commons",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc -b",
    "clean": "rm -rf dist *.tsbuildinfo",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "lint": "eslint src --ext .ts --max-warnings 0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "vitest": "^4.0.18"
  },
  "keywords": [
    "process-manager",
    "state-machine",
    "workflow",
    "saga",
    "ddd",
    "cqrs",
    "distributed-systems"
