{
  "name": "@acme/testing",
  "version": "0.1.0",
  "description": "Testing utilities: Builders, Fakes, Test harnesses",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc -b",
    "clean": "rm -rf dist *.tsbuildinfo",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@acme/kernel": "workspace:*",
    "@acme/application": "workspace:*",
    "@acme/messaging": "workspace:*",
    "@acme/outbox": "workspace:*"
  },
  "keywords": [
    "testing",
    "test-builders",
    "fakes",
    "test-harness"
  ],
  "author": "",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/marcusPrado02/ts-commons.git"
  },
  "bugs": "https://github.com/marcusPrado02/ts-commons/issues",
  "homepage": "https://github.com/marcusPrado02/ts-commons/tree/main/packages/testing#readme",
  "files": [
    "dist",
    "src",
    "README.md"
  ]
}
