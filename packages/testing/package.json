{
  "name": "@acme/testing",
  "version": "0.1.0",
  "description": "Testing utilities: Builders, Fakes, Test harnesses",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc -b",
    "clean": "rm -rf dist *.tsbuildinfo",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "vitest": "^2.1.9"
  },
  "dependencies": {
    "@acme/kernel": "workspace:*",
    "@acme/application": "workspace:*",
    "@acme/messaging": "workspace:*",
    "@acme/outbox": "workspace:*"
  },
  "keywords": ["testing", "test-builders", "fakes", "test-harness"],
  "author": "",
  "license": "MIT"
}
