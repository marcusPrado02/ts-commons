{
  "name": "@acme/web-nestjs",
  "version": "0.1.0",
  "description": "NestJS adapter for TypeScript Commons Platform - Deep integration with modules, decorators, interceptors, guards and pipes",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "nestjs",
    "adapter",
    "clean-architecture",
    "ddd",
    "cqrs",
    "decorators",
    "interceptors",
    "guards",
    "typescript"
  ],
  "author": "ACME Corp",
  "license": "MIT",
  "dependencies": {
    "@acme/application": "workspace:*",
    "@acme/kernel": "workspace:*",
    "@acme/errors": "workspace:*",
    "@acme/observability": "workspace:*",
    "@acme/resilience": "workspace:*",
    "@acme/outbox": "workspace:*",
    "@nestjs/common": "^10.3.3",
    "@nestjs/core": "^10.3.3",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@nestjs/platform-express": "^10.3.3",
    "@nestjs/testing": "^10.3.3",
    "@types/node": "^20.11.19",
    "@types/supertest": "^6.0.2",
    "supertest": "^7.0.0",
    "typescript": "^5.3.3",
    "vitest": "^2.1.9",
    "@vitest/coverage-v8": "^2.1.9"
  },
  "peerDependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0"
  }
}
